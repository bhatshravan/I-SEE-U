<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Apollo Hospitals Admin - List Patients</title>
    <%include ./partials/head%>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <% include ./partials/sidebar%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->

          <% include ./partials/topbar%>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">List Patients</h1>

            <!-- DataTales Example -->
            <div class="card mb-4">
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>Patient ID</th>
                        <th>Name</th>
                        <th>Bed Number</th>
                        <th>Room Number</th>
                        <th>Remove Patients</th>
                        <th>View Stream</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Patient ID</th>
                        <th>Name</th>
                        <th>Bed Number</th>
                        <th>Room Number</th>
                        <th>Remove Patients</th>
                        <th>View Stream</th>
                      </tr>
                    </tfoot>
                    <tbody>
                    <% for(var i=0; i<patients.length; i++) {%>
                    <tr>
                      <td><%= patients[i].patientID%></td>
                      <td><%= patients[i].name%></td>
                      <td><%= patients[i].bed%></td>
                      <td><%= patients[i].room%></td>
                      <td>
                      <!--href="../Patient/removePatient?patientID=<%= patients[i].patientID%>"-->
                        <a href="removePatient?patientID=<%= patients[i]._id%>" class="btn btn-danger btn-icon-split" >
                          <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                          </span>
                          <span class="text">Remove Patient</span>
                        </a>
                      </td>
                      <td>
                      <!--href="../Patient/removePatient?patientID=<%= patients[i].patientID%>"-->
                        <a href="" class="btn btn-primary btn-icon-split" >
                          <span class="icon text-white-50">
                            <i class="fas fa-eye"></i>
                          </span>
                          <span class="text">View Stream</span>
                        </a>
                      </td>
                    </tr>

                    <%}%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Double Helix 2019</span>
            </div>
          </div>
        </footer>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
  </div>
</div>
    <!-- End of Page Wrapper -->

    <script> 
    function deleteItem(var id) {
      alert(id);
      $.get('../Patient/removePatient?patientID=' +id);
      $(id).closest("tr").remove();
    }
    </script>
    <% include ./partials/footer %>
  </body>
</html>
